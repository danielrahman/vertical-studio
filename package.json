{
  "name": "vertical-studio",
  "version": "1.0.0",
  "description": "Automated website generation system for boutique developers.",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "validate": "node scripts/validate.js",
    "generate": "node engine/generator.js",
    "pipeline": "node engine/pipeline.js",
    "api": "node scripts/start-api.js",
    "worker": "node scripts/start-worker.js",
    "ui": "node scripts/start-ui.js",
    "dev:api-worker": "node scripts/dev-api-worker.js",
    "dev:full": "node scripts/dev-full.js",
    "secret:set": "node scripts/set-secret.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{apps,packages,tests/vitest}/**/*.{ts,tsx}\" --max-warnings=0",
    "format:check": "prettier --check \"{apps,packages,tests/vitest}/**/*.{ts,tsx,md,json}\" \".eslintrc.cjs\" \".prettierrc.json\" \"tsconfig*.json\" \"vitest.config.ts\"",
    "test:vitest": "vitest run",
    "test": "node --test"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cheerio": "^1.1.2",
    "express": "^5.1.0",
    "libphonenumber-js": "^1.12.38",
    "next": "^14.2.33",
    "playwright": "^1.52.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
