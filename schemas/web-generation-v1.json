{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vertical-studio.dev/schemas/web-generation-v1.json",
  "title": "Vertical Studio Website Generation Input",
  "type": "object",
  "required": [
    "meta",
    "brand",
    "navigation",
    "sections",
    "projects",
    "team",
    "testimonials",
    "contact",
    "footer"
  ],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "companyName",
        "brandSlug",
        "locale",
        "industry",
        "primaryColor",
        "secondaryColor",
        "fontPrimary",
        "fontSecondary"
      ],
      "additionalProperties": true,
      "properties": {
        "companyName": { "type": "string", "minLength": 2 },
        "brandSlug": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "locale": { "type": "string", "minLength": 2 },
        "industry": {
          "type": "string",
          "enum": ["boutique_developer", "real_estate", "architecture"]
        },
        "primaryColor": { "$ref": "#/$defs/color" },
        "secondaryColor": { "$ref": "#/$defs/color" },
        "fontPrimary": { "$ref": "#/$defs/font" },
        "fontSecondary": { "$ref": "#/$defs/font" }
      }
    },
    "brand": {
      "type": "object",
      "required": ["tagline", "description", "valueProps", "personality"],
      "additionalProperties": true,
      "properties": {
        "tagline": { "type": "string", "minLength": 3 },
        "description": { "type": "string", "minLength": 10 },
        "story": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "html": { "type": "string" }
          }
        },
        "valueProps": {
          "type": "array",
          "minItems": 3,
          "maxItems": 6,
          "items": {
            "type": "object",
            "required": ["id", "icon", "title", "description", "order"],
            "additionalProperties": true,
            "properties": {
              "id": { "type": "string", "minLength": 2 },
              "icon": { "type": "string", "minLength": 2 },
              "title": { "type": "string", "minLength": 2 },
              "description": { "type": "string", "minLength": 8 },
              "order": { "type": "integer", "minimum": 1 }
            }
          }
        },
        "personality": {
          "type": "object",
          "required": ["tone"],
          "additionalProperties": true,
          "properties": {
            "tone": {
              "type": "string",
              "enum": ["formal", "warm", "professional", "playful"]
            },
            "keywords": {
              "type": "array",
              "items": { "type": "string" }
            },
            "emotions": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "awards": {
          "type": "array",
          "items": { "type": "string" }
        },
        "certifications": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "navigation": {
      "type": "object",
      "required": ["sticky", "items", "cta"],
      "additionalProperties": true,
      "properties": {
        "sticky": { "type": "boolean" },
        "items": {
          "type": "array",
          "minItems": 3,
          "items": {
            "type": "object",
            "required": ["label", "href"],
            "additionalProperties": true,
            "properties": {
              "label": { "type": "string", "minLength": 1 },
              "href": { "type": "string", "minLength": 1 }
            }
          }
        },
        "cta": {
          "type": "object",
          "required": ["label", "action", "href"],
          "additionalProperties": true,
          "properties": {
            "label": { "type": "string", "minLength": 1 },
            "action": {
              "type": "string",
              "enum": ["scroll", "link", "mailto", "tel"]
            },
            "href": { "type": "string", "minLength": 1 },
            "variant": { "type": "string" }
          }
        }
      }
    },
    "sections": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "object",
        "required": ["id", "type", "title", "data"],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string", "minLength": 2 },
          "type": {
            "type": "string",
            "enum": [
              "hero",
              "value-props",
              "portfolio-preview",
              "portfolio-grid",
              "process",
              "team",
              "testimonials",
              "stats",
              "cta-form",
              "contact",
              "about",
              "faq"
            ]
          },
          "title": { "type": "string", "minLength": 2 },
          "subtitle": { "type": "string" },
          "order": { "type": "integer", "minimum": 1 },
          "data": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "layout": { "$ref": "#/$defs/layout" },
              "ctaPrimary": { "$ref": "#/$defs/cta" },
              "ctaSecondary": { "$ref": "#/$defs/cta" }
            }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "slug",
          "status",
          "location",
          "type",
          "units",
          "thumbnail"
        ],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string", "minLength": 2 },
          "name": { "type": "string", "minLength": 2 },
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "tagline": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["planned", "in_progress", "completed"]
          },
          "location": {
            "type": "object",
            "required": ["city"],
            "additionalProperties": true,
            "properties": {
              "street": { "type": "string" },
              "city": { "type": "string", "minLength": 2 },
              "region": { "type": "string" }
            }
          },
          "type": { "type": "string", "minLength": 2 },
          "units": { "type": "integer", "minimum": 1 },
          "completionYear": { "type": "integer", "minimum": 2000 },
          "thumbnail": {
            "type": "object",
            "required": ["url"],
            "additionalProperties": true,
            "properties": {
              "url": { "type": "string", "minLength": 3 },
              "alt": { "type": "string" }
            }
          },
          "features": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "team": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "role", "bio", "photo", "order"],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string", "minLength": 2 },
          "name": { "type": "string", "minLength": 2 },
          "role": { "type": "string", "minLength": 2 },
          "bio": { "type": "string", "minLength": 10 },
          "photo": {
            "type": "object",
            "required": ["url"],
            "additionalProperties": true,
            "properties": {
              "url": { "type": "string", "minLength": 3 }
            }
          },
          "linkedin": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "order": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "testimonials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "quote", "author", "rating"],
        "additionalProperties": true,
        "properties": {
          "id": { "type": "string", "minLength": 2 },
          "quote": { "type": "string", "minLength": 10 },
          "author": { "type": "string", "minLength": 2 },
          "project": { "type": "string" },
          "rating": { "type": "integer", "minimum": 1, "maximum": 5 }
        }
      }
    },
    "contact": {
      "type": "object",
      "required": ["email", "phone", "address", "form"],
      "additionalProperties": true,
      "properties": {
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string", "minLength": 5 },
        "address": {
          "type": "object",
          "required": ["street", "city", "postalCode"],
          "additionalProperties": true,
          "properties": {
            "street": { "type": "string", "minLength": 2 },
            "city": { "type": "string", "minLength": 2 },
            "postalCode": { "type": "string", "minLength": 3 }
          }
        },
        "form": {
          "type": "object",
          "required": ["title", "fields", "submitLabel"],
          "additionalProperties": true,
          "properties": {
            "title": { "type": "string", "minLength": 2 },
            "fields": {
              "type": "array",
              "minItems": 3,
              "items": {
                "type": "object",
                "required": ["name", "label", "type"],
                "additionalProperties": true,
                "properties": {
                  "name": { "type": "string", "minLength": 1 },
                  "label": { "type": "string", "minLength": 1 },
                  "type": {
                    "type": "string",
                    "enum": ["text", "email", "tel", "textarea", "checkbox"]
                  },
                  "required": { "type": "boolean" }
                }
              }
            },
            "submitLabel": { "type": "string", "minLength": 2 }
          }
        }
      }
    },
    "footer": {
      "type": "object",
      "required": ["columns", "social"],
      "additionalProperties": true,
      "properties": {
        "columns": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": ["title", "links"],
            "additionalProperties": true,
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "links": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["label", "href"],
                  "additionalProperties": true,
                  "properties": {
                    "label": { "type": "string", "minLength": 1 },
                    "href": { "type": "string", "minLength": 1 }
                  }
                }
              }
            }
          }
        },
        "social": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["platform", "url"],
            "additionalProperties": true,
            "properties": {
              "platform": { "type": "string", "minLength": 2 },
              "url": { "type": "string", "format": "uri" }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "color": {
      "type": "object",
      "required": ["hex", "name"],
      "additionalProperties": true,
      "properties": {
        "hex": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "name": { "type": "string", "minLength": 2 }
      }
    },
    "font": {
      "type": "object",
      "required": ["family", "weights", "googleFontsId"],
      "additionalProperties": true,
      "properties": {
        "family": { "type": "string", "minLength": 2 },
        "weights": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "integer", "minimum": 100, "maximum": 900 }
        },
        "googleFontsId": { "type": "string", "minLength": 2 }
      }
    },
    "layout": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "fullWidth": { "type": "boolean" },
        "align": { "type": "string", "enum": ["left", "center", "right"] },
        "columns": { "type": "integer", "minimum": 1, "maximum": 6 }
      }
    },
    "cta": {
      "type": "object",
      "required": ["label", "action", "href"],
      "additionalProperties": true,
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "action": {
          "type": "string",
          "enum": ["scroll", "link", "mailto", "tel"]
        },
        "href": { "type": "string", "minLength": 1 }
      }
    }
  }
}
